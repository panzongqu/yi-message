{
    "root": true,
    "extends": "eslint:recommended",
    "env": {
        "browser": true,
        "node": true,
        "es6": true
    },
    "parserOptions": {
        "ecmaVersion": 2017,
        "sourceType": "module",
        "ecmaFeatures": {
            "experimentalObjectRestSpread": true
        }
    },
    "globals": {
        "DEBUG": true,
        "CLOUD": true
    },
    "rules": {
        "no-alert": "off",
        "no-console": "off",
        "no-undef": "error",
        // unix换行符
        "linebreak-style": ["error", "unix"],
        // 悬挂式大括号
        "brace-style": ["error", "1tbs"],
        // 分号党
        "semi": ["error", "always"],
        // 字符串单引号
        "quotes": ["error", "single"],
        // 全等号
        "eqeqeq": ["error", "always"],
        // 只允许单行省略大括号
        "curly": ["error", "multi-line"],
        // 不重写保留字
        "no-shadow-restricted-names": ["error"],
        // 不允许label
        "no-labels": ["error"],
        // 不允许扩展原型
        "no-extend-native": ["error"],
        // 单词运算符加空格（new typeof之类）
        "space-unary-ops": ["error"],
        // 运算符前后加空格
        "space-infix-ops": ["error"],
        // 不允许给自己赋值
        "no-self-assign": ["error"],
        // 不允许抛非Error实例
        "no-throw-literal": ["warn"],
        // 允许空case
        "no-case-declarations": "off",
        // 允许在表达式中赋值
        "no-cond-assign": "off",
        // 定义未使用的变量
        "no-unused-vars": ["warn", {
            "vars": "all",
            "args": "none"
        }],
        // Promise reject错误对象
        "prefer-promise-reject-errors": ["error", { "allowEmptyReject": true }]
    }
}